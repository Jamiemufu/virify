model Property {
  id                 Int                  @id @default(autoincrement())
  propertyType       PropertyType
  title              String
  description        String
  size               Float?
  yearBuilt          String
  constructionType   ConstructionType
  roofConstruction   RoofConstruction
  floorLevel         Int?
  furnishingStatus   FurnishingStatus
  energyRating       String?
  tenure             Tenure
  leaseTerm          Int?
  address            Address?
  bedrooms           Int                  @default(3)
  bathrooms          Int                  @default(1)
  kitchens           Int                  @default(1)
  livingRooms        Int                  @default(1)
  diningRooms        Int                  @default(1)
  bedroomFeatures    BedroomFeatures[]
  diningroomFeatures DiningroomFeatures[]
  kitchenFeatures    KitchenFeatures?
  livingAreaFeatures LivingAreaFeatures[]
  bathroomFeatures   BathroomFeatures[]
  storageFeatures    StorageFeatures?
  outdoorSpace       OutdoorSpace?
  parking            Parking?
  securityFeatures   SecurityFeatures?
  amenities          AmenitiesFeature[]
  runningCosts       RunningCosts?
  media              Media[]
  agent              Agent?               @relation(fields: [agentId], references: [id])
  agentId            Int?
  User               User?                @relation(fields: [userId], references: [id])
  userId             Int?
  additionalFeatures AdditionalFeatures[]
  listing            Listing?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
}

enum PropertyType {
  HOUSE
  TERRACED
  SEMI_DETACHED
  END_OF_TERRACE
  DETACHED
  COTTAGE
  BUNGALOW
  CONDO
  PENTHOUSE
  FLAT
  LAND
}

enum ConstructionType {
  STONE
  BRICK
  STANDARD
}

enum RoofConstruction {
  SLATE_TILE
  CONCRETE_TILE
}

enum FurnishingStatus {
  FURNISHED
  UNFURNISHED
  PART_FURNISHED
}

enum Tenure {
  LEASEHOLD
  FREEHOLD
}
